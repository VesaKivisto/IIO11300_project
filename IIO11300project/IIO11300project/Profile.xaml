                            <Image Source="{Binding [28]}" Margin="270,220,433,122" Stretch="Fill" />
                            <Image Source="{Binding [29]}" Margin="477,162,226,180" Stretch="Fill" />
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="tabMasteries" Header="Masteries">
