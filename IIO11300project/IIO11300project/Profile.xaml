<Window x:Class="IIO11300project.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IIO11300project"
        mc:Ignorable="d"
        Title="Profile" Height="500" Width="650">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="imgProfileIcon" Height="75" Width="75" Margin="25, 10, 0, 25"/>
                    <TextBlock x:Name="tbSummonerName" Margin="20, 10, 0, 25" VerticalAlignment="Center"/>
                    <TextBlock x:Name="tbSummonerRegion" Margin="20, 10, 0, 25" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="imgRankIcon" Height="75" Width="75" Margin="25, 10, 0, 25"/>
                    <TextBlock x:Name="tbRank" Margin="20, 10, 0, 25" VerticalAlignment="Center"/>
                    <TextBlock x:Name="tbLeagueName" Margin="20, 10, 0, 25" VerticalAlignment="Center"/>
                    <TextBlock x:Name="tbRankLP" Margin="20, 10, 0, 25" VerticalAlignment="Center"/>
                    <TextBlock x:Name="tbRankWinrate" Margin="20, 10, 0, 25" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TabControl x:Name="tcMenu" Height="350">
                    <TabItem x:Name="tabMatches" Header="Matches">
                    </TabItem>
                    <TabItem x:Name="tabChampions" Header="Champions">
                    </TabItem>
                    <TabItem x:Name="tabRunes" Header="Runes">
                    </TabItem>
                    <TabItem x:Name="tabMasteries" Header="Masteries">
                    </TabItem>
                </TabControl>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
