                            <Image Source="{Binding [22].Icon}" Margin="549,260,190,117" Opacity="{Binding [22].Opacity}" />
                            <Image Source="{Binding [23].Icon}" Margin="672,260,67,117" Opacity="{Binding [23].Opacity}" />
                            <Image Source="{Binding [24].Icon}" Margin="549,320,190,57" Opacity="{Binding [24].Opacity}" />
                            <Image Source="{Binding [25].Icon}" Margin="610,320,129,57" Opacity="{Binding [25].Opacity}" />
                            <Image Source="{Binding [26].Icon}" Margin="672,320,67,57" Opacity="{Binding [26].Opacity}" />
                        </Grid>
                    </TabItem>
                    <ListView x:Name="listView" Height="100" Width="100">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Asd"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabControl>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
