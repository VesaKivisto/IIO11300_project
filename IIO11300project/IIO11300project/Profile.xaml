<Window x:Class="IIO11300project.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IIO11300project"
        mc:Ignorable="d"
        Title="Profile" Height="600" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel x:Name="spSummonerInfo" Orientation="Horizontal">
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="imgProfileIcon" Height="75" Width="75" Margin="25, 10, 0, 25" Source="{Binding Path=ProfileIcon}"/>
                    <TextBlock x:Name="tbSummonerName" Margin="20, 10, 0, 25" VerticalAlignment="Center" Text="{Binding Path=Name}"/>
                    <TextBlock x:Name="tbSummonerRegion" Margin="20, 10, 0, 25" VerticalAlignment="Center" Text="{Binding Path=Region}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="imgRankIcon" Height="75" Width="75" Margin="25, 10, 0, 25" Source="{Binding Path=RankIcon}"/>
                    <TextBlock x:Name="tbRank" Margin="20, 10, 0, 25" VerticalAlignment="Center" Text="{Binding Path=TierDivision}"/>
                    <TextBlock x:Name="tbLeagueName" Margin="20, 10, 0, 25" VerticalAlignment="Center" Text="{Binding Path=LeagueName}"/>
                    <TextBlock x:Name="tbRankLP" Margin="20, 10, 0, 25" VerticalAlignment="Center" Text="{Binding Path=LP}"/>
                    <TextBlock x:Name="tbRankWinrate" Margin="20, 10, 0, 25" VerticalAlignment="Center" Text="{Binding Path=Winrate}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TabControl x:Name="tcMenu" Height="450" SelectionChanged="tcMenu_SelectionChanged">
                    <TabItem x:Name="tabMatches" Header="Matches">
                        <DataGrid>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Champion" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Height="50" Width="50" Source="{Binding Path=Icon}"/>
                                                <TextBlock Text="{Binding Path=Name}" Margin="10, 15, 0, 0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Summoner spells" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Height="50" Width="50" Source="{Binding Path=Icon}"/>
                                                <TextBlock Text="{Binding Path=Name}" Margin="10, 15, 0, 0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Stats" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Height="50" Width="50" Source="{Binding Path=Icon}"/>
                                                <TextBlock Text="{Binding Path=Name}" Margin="10, 15, 0, 0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Items" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Height="50" Width="50" Source="{Binding Path=Icon}"/>
                                                <TextBlock Text="{Binding Path=Name}" Margin="10, 15, 0, 0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem x:Name="tabChampions" Header="Champions">
                        <DataGrid x:Name="dgChampions" AutoGenerateColumns="False" ItemsSource="{Binding}" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Champion" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Height="50" Width="50" Source="{Binding Path=Icon}"/>
                                                <TextBlock Text="{Binding Path=Name}" Margin="10, 15, 0, 0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Level" Binding="{Binding Path=Level}" Width="*"/>
                                <DataGridTextColumn Header="Total points" Binding="{Binding Path=TotalPoints}" Width="*"/>
                                <DataGridTextColumn Header="Until next level" Binding="{Binding Path=PointsToNextLevel}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem x:Name="tabRunes" Header="Runes" >
                        <Grid x:Name="grdRunePage">
                            <Image Source="/images/rune-bg.png" />
                            <Image Source="{Binding [0]}" Margin="98,363,633,6" Stretch="Fill" />
                            <Image Source="{Binding [1]}" Margin="159,363,572,6" Stretch="Fill" />
                            <Image Source="{Binding [2]}" Margin="227,363,504,6" Stretch="Fill" />
                            <Image Source="{Binding [3]}" Margin="84,311,647,57" Stretch="Fill" />
