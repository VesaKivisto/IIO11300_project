                            <Image Source="{Binding [31].Icon}" Margin="429,80,310,297" Opacity="{Binding [31].Opacity}" />
                            <Image Source="{Binding [32].Icon}" Margin="306,140,433,237" Opacity="{Binding [32].Opacity}" />
